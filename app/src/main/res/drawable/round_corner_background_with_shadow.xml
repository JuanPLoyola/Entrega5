<!-- round_corner_background_with_shadow.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Sombra -->
    <item android:right="4dp" android:top="4dp"> <!-- Ajusta la sombra más grande para intensificarla -->
        <shape android:shape="rectangle">
            <solid android:color="#80000000" /> <!-- Color semitransparente más oscuro para una sombra más intensa -->
            <corners android:radius="12dp" />   <!-- Radio de esquinas -->
        </shape>
    </item>

    <!-- Fondo blanco con esquinas redondeadas -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" /> <!-- Fondo blanco -->
            <corners android:radius="12dp" />
        </shape>
    </item>

</layer-list>

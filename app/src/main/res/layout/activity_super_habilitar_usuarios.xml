<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    tools:context=".super_register_admin_rest">

    <Button
        android:id="@+id/editar_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Editar"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="16dp"
        android:backgroundTint="#FF8C04"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:onClick="editar_btn"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_below="@id/editar_btn">

        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:src="@drawable/perfil_icon"
            android:scaleType="fitCenter" />

        <EditText
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Nombre"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"
            android:background="@drawable/rounded_corner_gray"
            android:padding="15dp"
            android:inputType="none"
            android:id="@+id/Nombre"
            android:focusable="false"
            android:focusableInTouchMode="false"/>

        <EditText
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Apellidos"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"
            android:background="@drawable/rounded_corner_gray"
            android:padding="15dp"
            android:inputType="none"
            android:id="@+id/Apellidos"
            android:focusable="false"
            android:focusableInTouchMode="false"/>

        <EditText
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="DNI"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"
            android:background="@drawable/rounded_corner_gray"
            android:padding="15dp"
            android:inputType="none"
            android:id="@+id/DNI"
            android:focusable="false"
            android:focusableInTouchMode="false"/>

        <EditText
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Correo"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"
            android:background="@drawable/rounded_corner_gray"
            android:padding="15dp"
            android:inputType="none"
            android:id="@+id/Correo"
            android:focusable="false"
            android:focusableInTouchMode="false"/>

        <EditText
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Telefono"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"
            android:background="@drawable/rounded_corner_gray"
            android:padding="15dp"
            android:inputType="none"
            android:id="@+id/Telefono"
            android:focusable="false"
            android:focusableInTouchMode="false"/>

        <!-- LinearLayout para los botones Habilitar y Deshabilitar -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/habilitado_btn"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:backgroundTint="#FF8C04"
                android:padding="15dp"
                android:text="Habilitar"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/deshabilitado_btn"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_marginStart="10dp"
                android:backgroundTint="#FF8C04"
                android:padding="15dp"
                android:text="Deshabilitar"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
